<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fitness Question</title>
    <!-- ads -->
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-6942787422975993"
    crossorigin="anonymous"></script>
    <link rel="shortcut icon" href="head.ico" type="image/x-icon">
    <!-- google fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&family=Ubuntu&display=swap" rel="stylesheet">
    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <!-- scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
  <!-- Font Awesome -->
<script defer src="https://use.fontawesome.com/releases/v6.1.2/js/all.js"></script>
  <!-- css -->
<style>
  body{
    text-align: center;
    font-family: Ubuntu,Montserrat;
  }
   /* navbar */
    .nav-color{
        background-color: greenyellow;
    }
    .header{
        padding: 0px;
    }
    .question{
        text-align: left;
    }
    hr{
      border-style: dotted none none none;
    width: 100%;
    border-width: 10px;
    border-color: black;
    }
    .question-pointer{
      float:left;
      margin-right: 1rem;
      margin-left: 1rem;
    }
    .icon{
      margin-top: 2rem;
    }
    .answer-pointer{
     text-align: left;  
     margin-left: 1rem; 
    }  
    .sbtn{
      margin-top: 1rem;
    }
    .ftr{
    text-align: center;
    margin-bottom: 1rem;
}
    @media(max-width:450px){
      #answerarea{
        width: 100px;
      }
    }
</style>

</head>
<body>
  <div class="container-fluid header">
    <nav class="navbar navbar-expand-lg  nav-color">
          <a class="navbar-brand">FQ</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link  hover" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link hover" href="/login">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link hover" href="/register">Register</a>
              </li>
              <li class="nav-item">
               
                  <a class="nav-link hover"  href="/question">Questions</a>
              
              </li>
              
              
            </ul>
          </div>
      </nav>
    </div>
    <div class="row">
      <div class="col-lg-2 col-md-1 col-sm-1"></div>
 <div class="col-lg-8 col-md-10 col-sm-10">
  <i class="fa-solid fa-user icon fa-3x"></i>
<h1><%= post.name %></h1>
<h3 class="question-pointer">Question:-</h3>
<p class="question"><%= post.question %></p>
<form action="/question/<%=id%>" method="post">
    <textarea name="answerarea" id="answerarea" cols="50" rows="1" placeholder="write answer here"></textarea><br>
    <button type="submit" class="sbtn">submit</button>
</form>
<h3 class="answer-pointer">Answers:-</h3>
<% answer.forEach(function(Post){ %>
  <div class="card">
   
    <div class="card-header">
      <i class="fa-solid fa-user"></i>
     
        <h3><%=Post.name%></h3>
   
  </div>
  
  
  <div class="card-body">
    
      <p><%=Post.answer%></p>
    
    
  </div>
  
</div>
    <hr> 
<%  }) %>
</div>

<div class="col-lg-2 col-md-1 col-sm-1"></div>
</div>
<footer class="ftr">
  <p>
  Thanks for visiting
</p>
</footer>
</body>
</html>